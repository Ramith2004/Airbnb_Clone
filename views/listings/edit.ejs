<% layout('layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your listing</h3>
      <form action="/listings/<%=listing._id%>?_method=PUT" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="title"
            placeholder="Title"
            type="text"
            class="form-control"
            value="<%= listing.title %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            placeholder="Description"
            class="form-control"
            required
          >
<%= listing.description %></textarea
          >
        </div>
        <div class="mb-3">
          Original Image: <br>
          <img src="<%= originalImage %>" alt="Listing Image" style="width: 200px; height: 150px; object-fit: cover; border-radius: 5px;"/>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            name="image"
            placeholder="Enter Image url/Link"
            type="file"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input name="price" type="number" placeholder="Price"
            class="form-control" value= "<%= listing.price %>" required />
          </div>
          <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="country"
              placeholder="Country"
              type="text"
              class="form-control"
              value="<%= listing.country %>"
              required
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="location"
            placeholder="Location"
            type="text"
            class="form-control"
            value="<%= listing.location %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-dark add-btn">
          Edit this listing
        </button>
      </form>
      <br><br>
    </div>
  </div>
</body>
